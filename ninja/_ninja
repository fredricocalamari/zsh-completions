#compdef ninja

_ninja() {
    local -a options
    options=(
        '--version[print ninja version]'
        '-v,--verbose[show all command lines while building]'
        '--quiet[dont show progress status, just command output]'
        '-C+[change to DIR before doing anything else]:DIR:_directories'
        '-f+[specify input build file]:FILE:_files'
        '-j+[run N jobs in parallel]:N:( )'
        '-k+[keep going until N jobs fail]:N:( )'
        '-l+[do not start new jobs if the load average is greater than N]:N:( )'
        '-n[dry run]'
        '-d+[enable debugging (use -d list to list modes)]:MODE:(list)'
        '-t+[run a subtool (use -t list to list subtools)]:TOOL:(list)'
        '-w+[adjust warnings (use -w list to list warnings)]:FLAG:(list)'
    )

    _arguments -s $options
}

_ninja

