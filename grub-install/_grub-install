#compdef grub-install

_arguments \
  '--compress=[compress GRUB files]:compression method:(no xz gz lzo)' \
  '--disable-shim-lock[disable shim_lock verifier]' \
  '--dtb=[embed a specific DTB]:DTB file:_files' \
  '-d,--directory=[use images and modules under DIR]:directory:_directories' \
  '--fonts=[install FONTS]:fonts (comma-separated)' \
  '--install-modules=[install only MODULES and their dependencies]:modules (comma-separated)' \
  '-k,--pubkey=[embed FILE as public key for signature checking]:public key file:_files' \
  '--locale-directory=[use translations under DIR]:directory:_directories' \
  '--locales=[install only LOCALES]:locales (comma-separated)' \
  '--modules=[pre-load specified modules MODULES]:modules (comma-separated)' \
  '--sbat=[SBAT metadata]:SBAT file:_files' \
  '--themes=[install THEMES]:themes (comma-separated)' \
  '-v,--verbose[print verbose messages]' \
  '--allow-floppy[make the drive also bootable as floppy]' \
  '--boot-directory=[install GRUB images under the directory DIR/grub]:directory:_directories' \
  '--bootloader-id=[the ID of bootloader]:bootloader ID' \
  '--core-compress=[choose the compression to use for core image]:compression method:(xz none auto)' \
  '--disk-module=[disk module to use]:disk module:(biosdisk native)' \
  '--efi-directory=[use DIR as the EFI System Partition root]:EFI directory:_directories' \
  '--force[install even if problems are detected]' \
  '--force-file-id[use identifier file even if UUID is available]' \
  '--label-bgcolor=[use COLOR for label background]:color' \
  '--label-color=[use COLOR for label]:color' \
  '--label-font=[use FILE as font for label]:font file:_files' \
  '--macppc-directory=[use DIR for PPC MAC install]:directory:_directories' \
  '--no-bootsector[do not install bootsector]' \
  '--no-nvram[dont update the boot-device/Boot* NVRAM variables]' \
  '--no-rs-codes[Do not apply any reed-solomon codes]' \
  '--product-version=[use STRING as product version]:version string' \
  '--recheck[delete device map if it already exists]' \
  '--removable[the installation device is removable]' \
  '-s,--skip-fs-probe[do not probe for filesystems in DEVICE]' \
  '--target=[install GRUB for TARGET platform]:target platform:(arm-coreboot arm-efi arm-uboot arm64-efi i386-coreboot i386-efi i386-ieee1275 i386-multiboot i386-pc i386-qemu i386-xen i386-xen_pvh ia64-efi loongarch64-efi mips-arc mips-qemu_mips mipsel-arc mipsel-loongson mipsel-qemu_mips powerpc-ieee1275 riscv32-efi riscv64-efi sparc64-ieee1275 x86_64-efi x86_64-xen)' \
  '-?,--help[give this help list]' \
  '--usage[give a short usage message]' \
  '-V,--version[print program version]' \
  ':INSTALL_DEVICE:_files'

